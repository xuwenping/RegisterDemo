<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.administrator.resgistdemo.customLayout.TitleLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </com.example.administrator.resgistdemo.customLayout.TitleLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/phone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_phone"
            android:hint="请输入手机号"
            android:background="@drawable/input"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/password"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_passwd"
            android:hint="请输入密码"
            android:background="@drawable/input"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@drawable/verify_code"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:background="@drawable/input"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_verify_code"
                android:hint="请输入验证码"
                android:background="@drawable/input"
                android:layout_width="190dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/send_verify_code_btn"
                android:text="获取验证码"
                android:background="@drawable/verify_btn"
                android:layout_margin="10dp"
                android:layout_width="120dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content" />
        </FrameLayout>
    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        android:background="@drawable/login_btn_backgroud"
        android:text="注册"
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

</LinearLayout>
